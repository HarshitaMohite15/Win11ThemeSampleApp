        xmlns:local="clr-namespace:TestingApplication"
        mc:Ignorable="d"
        Title="TextWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="tbTxt" Text="TextBoxValue" Margin="11,14,365,336" TextChanged="tbTxt_TextChanged" AutomationProperties.AutomationId="tbTxt"
